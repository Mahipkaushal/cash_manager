<div class="search-container linear-transition center_screen center">
	<div class="head">
		<div class="section">
			<a class="icon-btns floating left back_btn"><i class="fa fa-chevron-left"></i> Back</a>
			<span>To</span>
			<a class="icon-btns floating right done_btn"><i class="fa fa-check"></i> Done</a>
		</div>
	</div>
	<div class="body">
		<div class="search_term">
			<div class="form-input-container">
				<input type="text" class="form-controls search" name="search" placeholder="Search..." value="" autocomplete="off" />
				<span class="deselect">&times;</span>
			</div>
		</div>
		<div class="search_results_body">
			<div class="search_results"></div>
		</div>

		<div class="sub-search-container">
			<div class="sub_search_term">
				<div class="form-input-container">
					<input type="hidden" name="result_search_id" value="0" />
					<input type="text" class="form-controls sub_search" name="sub_search" placeholder="Type Description..." value="" autocomplete="off" />
					<a class="sub_search_btn"><i class="fa fa-search"></i></a>
				</div>
			</div>
			<div class="sub_search_results_body">
				<div class="sub_search_results"></div>
			</div>
		</div>

	</div>
</div>